	name = Elijah Iverson
	email = eliiverson00@gmail.com
[advice]
	detachedHead = false

[alias]
	aliases = config --get-regexp alias
	st = status -sb
	br = branch
	co = checkout
	unadd = restore --staged
	fa = fetch --tags --prune --all
	fp = fetch --tags --prune
	la = log --all --graph --decorate
	loga = log --all --graph --decorate
	struct = log --oneline --simplify-by-decoration --graph --all
	wdiff = diff -w --word-diff=color --ignore-space-at-eol
	tn = tag -n

[core]
	excludesfile = ~/.gitignore_global
	editor = vim

[color]
	ui = auto

[color "grep"]
	match = cyan bold
	selected = blue
	context = normal
	filename = magenta
	linenumber = yellow
	separator = green

[fetch]
	prune = true

[http]
	cookieFile = ~/.gitcookies

[init]
	defaultBranch = main

[pull]
	ff = only

[user]
	useConfigOnly = true

# Local customizations from .gitconfig_local file
[include]
	path = ~/.gitconfig_local
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
